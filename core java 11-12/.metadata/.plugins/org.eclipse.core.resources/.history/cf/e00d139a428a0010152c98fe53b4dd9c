package com.rays.java.io;

import java.io.File;
import java.io.FileReader;

public class ReadTextFile {
	public static void main(String[] args) {
		FileReader file = null;
		try {
			
		file = new FileReader("C:\\IO\\Hello.txt");
		int i = file.read();
		while(i != -1); 
		System.out.println((char)i );
		i = file.read();
			
		} catch (Exception e) {
			 
			 
		}
		
	}

}
